<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<div class="comments">
  <%= render 'comments/comments' %>
</div>

<!-- adding 'remote: true' removes the need to write an ajax request on the client side, do it on the server instead -->
<%= form_for([ @post, @comment ], remote: true) do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %><br><br>

  <%= f.submit %>
<% end %><br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
