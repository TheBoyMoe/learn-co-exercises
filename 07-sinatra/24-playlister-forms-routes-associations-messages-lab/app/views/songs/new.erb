<h1>Add a new Song</h1>

<form action="/songs" method="post">

  <!-- add a new song -->
  <fieldset>
    <legend>Add a title</legend>
    <label for="Name">Name:</label>
    <input id="Name" type="text" name="song[name]" />
  </fieldset>

  <!-- pick a genre -->
  <fieldset>
    <legend>Pick the genre(s)</legend>
    <% @genres.each do |genre| %>
      <input id="<%= genre.id%>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>">
      <label for="<%= genre.id %>"><%= genre.name %></label>
    <% end %>
  </fieldset>

  <!-- add the artist -->
  <fieldset>
    <legend>Add the artist</legend>
    <label for="Artist_Name">Artist Name:</label>
    <input id="Artist_Name" type="text" name="artist[name]" />
  </fieldset>

  <input type="submit" name="create" value="Create">

</form>
