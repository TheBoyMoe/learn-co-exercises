<h1>Update Pet</h1>

<!-- Edit the pet -->
<form action="/pets/<%= @pet.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="pet_name">Pet name:</label>
  <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>"/>
  <br><br>

  <!-- select from a list of available owners -->
  <fieldset>
    <legend>Select from the available owners</legend>
    <% Owner.all.each do |owner| %>
      <input id="<%= owner.id %>" type="radio" name="pet[owner_id]" value="<%= owner.id %>" <%= 'checked' if @pet.owner.id == owner.id %>/>
      <label for="<%= owner.id %>"><%= owner.name %></label>
    <% end %>
  </fieldset>
  <br><br>

  <!-- create a new owner for the pet, overwrite the old one -->
  <fieldset>
    <legend>Create a new owner</legend>
    <label for="owner_name">Owner name:</label>
    <input id="owner_name" type="text" name="owner[name]" />
  </fieldset>
  <br><br>

  <input type="submit" name="create_pet" value="Update Pet">
</form>
