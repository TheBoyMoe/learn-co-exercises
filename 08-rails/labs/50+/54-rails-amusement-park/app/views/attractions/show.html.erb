<h1>Attraction</h1>

<div>
	<p>Name: <%= @attraction.name %></p>
	<p>Number of users: <%= @attraction.users.count %></p>
	<p>Ticket requirement: <%= @attraction.tickets %></p>
	<p>Height requirement: <%= @attraction.min_height %></p>
	<p>Nausea rating: <%= @attraction.nausea_rating %></p>
	<p>Happiness rating: <%= @attraction.happiness_rating %></p>
</div>


<%#= button_to "Go on this ride", user_path(current_user), method: 'get' %>
<%#= link_to "Go on this ride", user_path(@attraction.user_id) %>

<% if current_user.admin %>
	<%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else %>
	<%= form_tag rides_new_path, method: 'post' do %>

		<%= hidden_field_tag(:attraction_id, value = @attraction.id) %>
		<%= hidden_field_tag(:user_id, value = current_user.id) %>

		<%= submit_tag 'Go on this ride' %>
	<% end %>
<% end %>
