<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
  <h3>Content:</h3>
  <p><%= @post.content %></p>
</p>
<h3>Tags:</h3>
<div>
  <% @post.tags.each do |tag| %>
    <span><%= tag.name %></span>
  <% end %>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
