<h3>Post Form</h3>

<!--form_for automaticall sets the path and method, using 'patch' when it's passed a pre-existing record-->
<!--automatically auto-fills values-->
<%= form_for(@post) do |f| %>
  <label for="post_title">Post title:</label><br>
  <%= f.text_field :title %><br>

  <label for="post_description">Post Description</label><br>
  <%= f.text_area :description %><br>
  
  <%= f.submit %>
<% end %>